<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            
    <h3>Create a new listing</h3>
    <form action="/listings" method="POST" novalidate class="needs-validation">
        <div class="mb-3">

            <label for="title" class="form-label" type="text" >Title</label>
            <input type="text" name="listing[title]" class="form-control" placeholder="Add a catchy title..." required> 
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Title cannot be empty!</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label" >Description</label>
            <textarea  name="listing[description]" class="form-control" id="description" placeholder="Enter description..." required></textarea> 
            <div class="invalid-feedback">Description cannot be empty!</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label" >Image Link</label>
            <input type="text" name="listing[image][url]" class="form-control" placeholder="Enter image URL/link..." >
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label" >Price</label>
                <input  name="listing[price]" class="form-control"  placeholder="Enter price" required>
            <div class="invalid-feedback">Please enter a valid Price</div>

            </div>
            
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label" >Country</label>
                        <input type="text" name="listing[country]" class="form-control" placeholder="India" required>
                        <div class="invalid-feedback">Country name should be valid</div>

                    </div>

        </div>

        

        <div class="mb-3">
            <label for="location" class="form-label" >Location</label>
            <input type="text" name="listing[location]" class="form-control" placeholder="Enter location..." required>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>
    </form>
</div>
</div>
</body>
